{% extends 'base.html.twig' %}

{% block body %}
    <div class="content general">
        <div class="container-fluid">
            <div class="col-md-12 col-sm-12 col-xs-12 no-lr-padding">
                <div class="wrapper">
                    <a href="#" class="back">Back</a>
                    <div class="col-md-12 col-sm-12 col-xs-12 no-lr-padding title">
                        <h1 class="text-center">User Management</h1>
                    </div>
                    <div class="col-md-12 col-xs-12 no-lr-padding text-center search">
                        {% if is_granted('ROLE_OWNER') %}
                            <span>Search by Hotel all users</span>
                            <div class="styled-input">
                                <select class="selectpicker" id="hotels">
                                    {% for name, hotel in hotels %}
                                        <option data-action="{{ path('paginate-and-sort') }}" data-role="owner" data-page="{{ currentPage }}" value="{{ hotel.hotelId }}"> {{ name }} </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <span class="light">(include all users options)</span>
                        {% endif %}
                        <div class="col-md-12 col-xs-12 no-lr-padding text-center">
                            <span class="light">(pagination, sorting, edit => redirect, remove = > confirmation)</span>
                        </div>
                    </div>
                    <div id="reload">
                        {{ include('user_management/table.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/user_management/user-management.js') }}"></script>
{% endblock %}
