{% extends 'base.html.twig' %}

{% block body %}
<div class="content login">
    <div class="container-fluid">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="wrapper">
                    <div class="container-small">
                        <div class="col-md-12 col-sm-12 col-xs-12 no-lr-padding title">
                            <h1 class="text-center">
                                {% trans %}
                                Welcome to Hotel Management System,
                                please login!
                                {% endtrans %}
                            </h1>
                        </div>
                        <form class="login-form" action="{{ path('login') }}" method="post">
                            <div class="col-md-12 col-xs-12 no-lr-padding">
                                <div class="styled-input">
                                    <label>{% trans %} form.label.username {% endtrans %}</label>
                                    <div class="rel">
                                        <input id="_username" name="_username" type="text" placeholder="Current Username" />
                                        <span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-xs-12 no-lr-padding">
                                <div class="styled-input">
                                    <label>{% trans %} form.label.password {% endtrans %}</label>
                                    <div class="rel">
                                        <input id="_password" name="_password" type="password" placeholder="Current Password" />
                                        <span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-xs-12 no-lr-padding">
                                <p> {% trans %} Donâ€™t have an account? Please {% endtrans %}
                                    <a href="{{ path('register') }}" class="register"> {% trans %} register. {% endtrans %}
                                    </a>
                                </p>
                            </div>
                            <div class="col-md-12 col-xs-12 no-lr-padding button-wrapper">
                                <a href="{{ path('register') }}" class="register-link"> {% trans %} Register {% endtrans %}</a>
                                <button type="submit" id="submit" class="btn submit pull-right"> {% trans %} Login {% endtrans %}</button>
                            </div>
                        </form>
                        <div class="col-md-12 col-xs-12 no-lr-padding text-center login-form-info">
                            <p class="light">{% trans %} Registrations will be done only as Client. {% endtrans %}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
