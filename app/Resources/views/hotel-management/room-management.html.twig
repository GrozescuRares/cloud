{% extends 'base.html.twig' %}

{% block body %}
    <div class="content general">
        <div class="container-fluid">
            <div class="col-md-12 col-sm-12 col-xs-12 no-lr-padding">
                <div class="wrapper">
                    <a href="#" class="back">Back</a>
                    <div class="col-md-12 col-sm-12 col-xs-12 no-lr-padding title">
                        <h1 class="text-center">Room Management <span>(Owner)</span></h1>
                    </div>
                    <div class="table-paginated table-filtered">
                        <div class="filters">
                            <a href="#" class="filters-toggle"><i class="fa fa-sliders"></i></a>
                            <div class="filters-open">
                                <div class="col-md-4 col-sm-6 col-xs-12 input-wrapper">
                                    <div class="styled-input">
                                        <select class="selectpicker" id="hotels">
                                            {% if is_granted('ROLE_OWNER') %}
                                                {% for hotel in hotels %}
                                                    <option value="{{ hotel.hotelId }}" {% if hotel.hotelId == firstHotel %}selected="selected{% endif %}">
                                                        {{ hotel.name }} </option>
                                                {% endfor %}
                                            {% elseif is_granted('ROLE_MANAGER') %}
                                                <option disabled="disabled" selected="selected"
                                                        value="{{ user.hotel[hotelId] }}"> {{ user.hotel[name] }} </option>
                                            {% endif %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 col-xs-12 input-wrapper">
                                    <div class="styled-input">
                                        <select class="selectpicker" id="smokingFilter">
                                            <option selected="selected" disabled="disabled">Smoking</option>
                                            <option value="Yes">Yes</option>
                                            <option value="No">No</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 col-xs-12 input-wrapper">
                                    <div class="styled-input">
                                        <select class="selectpicker" id="petFilter">
                                            <option disabled="disabled" selected="selected">Dogs</option>
                                            <option value="Yes">Yes</option>
                                            <option value="No">No</option>
                                        </select>
                                    </div>
                                </div>
                                <button class="btn submit" data-action="{{ path('filter-rooms') }}" data-page="{{ currentPage }}">Filter</button>
                                <div class="col-md-12 col-sm-12 col-xs-12 no-lr-padding">
                                    <a href="#" class="reset-filters"><i class="fa fa-close"></i>Reset filters</a>
                                </div>
                            </div>
                        </div>
                        <div id="reload">
                            {{ include('hotel-management/rooms-table.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/hotel-management/room-management.js') }}"></script>
    <script src="{{ asset('js/paginateAndSort.js') }}"></script>
{% endblock %}
