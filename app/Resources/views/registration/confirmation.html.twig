{% extends 'base.html.twig' %}

{% block body %}
    <center class="wrapper"
            style="table-layout:fixed;-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;Margin:0 auto;width:100%;max-width:716px;">
        <div class="webkit" style="max-width:700px;">
            <!--[if (gte mso 9)|(IE)]>
            <table width="600" align="center" style="border-spacing:0;font-family:sans-serif;color:#333333;">
